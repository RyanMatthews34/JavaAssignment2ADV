<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="727.0" prefWidth="840.0" style="-fx-background-color: #7ebceaff;"
            xmlns="http://javafx.com/javafx/9.0.4" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="InventoryController">
    <stylesheets>
        <URL value="@InventoryStyle.css"/>
    </stylesheets>
    <children>
        <GridPane layoutX="11.0" layoutY="80.0" prefHeight="579.0" prefWidth="818.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <GridPane alignment="CENTER" hgap="10.0" prefHeight="171.0" prefWidth="473.0" vgap="10.0"
                          GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label text="Total Inventory Value:" GridPane.rowIndex="1"/>
                        <Label text="Total Catagory Value" GridPane.rowIndex="2"/>
                        <Label fx:id="InventoryValueLabel" text="Inventory Value" GridPane.columnIndex="1"
                               GridPane.rowIndex="1"/>
                        <Label fx:id="CategoryValueLabel" text="Category Value" GridPane.columnIndex="1"
                               GridPane.rowIndex="2"/>
                        <ComboBox fx:id="consoleComboBox" prefHeight="27.0" prefWidth="189.0"/>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </GridPane>
                <ListView fx:id="listView" prefHeight="228.0" prefWidth="382.0"/>
                <GridPane alignment="CENTER" hgap="10.0" prefHeight="282.0" prefWidth="262.0" vgap="10.0"
                          GridPane.columnIndex="1">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <ImageView fx:id="imageView" fitHeight="127.0" fitWidth="242.0" pickOnBounds="true"
                                   preserveRatio="true" GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
                        <Button fx:id="sellUnitButton" alignment="CENTER" contentDisplay="CENTER"
                                mnemonicParsing="false" prefHeight="73.0" prefWidth="205.0" text="Sell 1 Unit"
                                GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER"/>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </GridPane>
                <GridPane alignment="TOP_CENTER" hgap="10.0" prefHeight="249.0" prefWidth="370.0" vgap="10.0"
                          GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1"
                          GridPane.valignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="33.0" minHeight="10.0" prefHeight="33.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="33.0" minHeight="10.0" prefHeight="33.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label fx:id="sortingLabel" text="Sort Order"/>
                        <RadioButton fx:id="PriceHighToLowRadioButton" mnemonicParsing="false"
                                     onAction="#radioButtonChanged" text="Sort Price High To low"
                                     GridPane.rowIndex="1"/>
                        <RadioButton fx:id="PriceLowToHighRadioButton" mnemonicParsing="false"
                                     onAction="#radioButtonChanged" text="Sort Price Low to High"
                                     GridPane.rowIndex="2"/>
                        <RadioButton fx:id="TitleAToZRadioButton" mnemonicParsing="false" onAction="#radioButtonChanged"
                                     text="Sort Title A-Z" GridPane.rowIndex="3"/>
                        <RadioButton fx:id="TitleZToARadioButton" mnemonicParsing="false" onAction="#radioButtonChanged"
                                     text="Sort Title Z-A" GridPane.rowIndex="4"/>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </GridPane>
            </children>
        </GridPane>
        <HBox layoutY="7.0" prefHeight="73.0" prefWidth="840.0">
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="75.0" prefWidth="840.0"
                       text="Video Game Store">
                    <font>
                        <Font size="30.0"/>
                    </font>
                </Label>
            </children>
        </HBox>
        <HBox alignment="CENTER" layoutX="11.0" layoutY="655.0" prefHeight="58.0" prefWidth="818.0">
            <children>
                <Button mnemonicParsing="false" onAction="#addVideoGameOnButtonPress" text="Add Video Game"/>
            </children>
        </HBox>
    </children>
</AnchorPane>
